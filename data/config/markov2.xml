		</state>
		<state id="3" name="move_dir">
			<packet regex="CWD" value="CWD &var"/>
		</state>
		<state id="4" name="move_back_dir">
			<packet regex="CDUP" value="CDUP"/>
		</state>
		<state id="5" name="move_back_dir">
			<packet regex="DELE" value="DELE &var"/>
		</state>
		<state id="6" name="misc">
			<packet regex="HELP" value="HELP"/>
			<packet regex="STAT" value="STAT"/>
			<packet regex="LIST" value="LIST"/>
			<packet regex="SYST" value="SYST"/>
		</state>
		<state id="7" name="quit">
			<command regex="QUIT" value="QUIT"/>
		</state>
